{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "skipLibCheck": true,
    //"strictNullChecks": true, //p1.5 - return this - it's a lot of work - but will make our results better
    // "importsNotUsedAsValues": "error",
    // "types": [
    //   "vitest/globals"
    // ],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom", "esnext.asynciterable"],
    "paths": {
      "remult": ["projects/core"],
      "rmb": ["projects/migration-builder"],
      "remult/*": ["projects/core/*"],
      "@remult/*": ["projects/*"]
    }
  },
  "exclude": []
}
